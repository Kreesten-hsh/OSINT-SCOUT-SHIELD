# --- Project Configuration ---
PROJECT_NAME=OSINT-SCOUT-SHIELD
API_V1_STR=/api/v1
# Domain for Traefik/Caddy (Production only)
DOMAIN_NAME=osint-scout.example.com
VITE_API_URL=http://localhost:8000/api/v1

# --- Database (PostgreSQL) ---
POSTGRES_USER=osint_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=osint_db
POSTGRES_HOST=db
POSTGRES_PORT=5432
# Optional: Full connection string override
# DATABASE_URL=postgresql+asyncpg://user:pass@host:5432/dbname

# --- Redis (Cache/Queue) ---
REDIS_URL=redis://redis:6379/0

# --- Security (JWT) ---
# Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE_ME_IN_PRODUCTION_MUST_BE_SECURE
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
AUTH_ADMIN_EMAIL=admin@osint.com
AUTH_ADMIN_PASSWORD=CHANGE_ME_ADMIN_PASSWORD

# --- CORS (Frontend URL) ---
# Comma-separated list of allowed origins
BACKEND_CORS_ORIGINS=["http://localhost:5173","http://localhost:3000","https://osint-scout.example.com"]
SQL_ECHO=False
AUTO_CREATE_TABLES=False
ENABLE_RESULT_CONSUMER=True

# --- Observability ---
# Set to 'True' for JSON logs in production
LOG_JSON=True
LOG_LEVEL=INFO
# Optional: Sentry DSN for error tracking
# SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0

# --- Scraper Configuration ---
# Parallelism limit
MAX_CONCURRENT_SCRAPES=5
